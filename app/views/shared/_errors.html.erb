<% if obj.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2 class="panel-title">You have errors</h2>
      <div class="panel-body">
        <ul>
        <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
<% end %>