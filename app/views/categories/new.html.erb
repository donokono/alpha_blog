<div class="row">
  <div class="col-xs-12">
    <h1>Create new category</h1>
    

<%= render 'shared/errors', obj: @category %>

    <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <label> <%= f.label :name  %></label>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control", placeholder: "Category name"  %>
      </div>
    </div>
    

    
    <div class="form-group">
      <div class="col-sm-2 control-label"></div>
      <div class="col-sm-10">
        <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cancel and Return to List", categories_path, class: "btn btn-danger" %>
      </div>
    </div>

    <% end %>
    
 

  </div>
</div>