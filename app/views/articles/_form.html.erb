<div class="row">
  <div class="col-xs-12">


    <% if @article.errors.any? %>
    <h2>You have errors</h2>
      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    <% end %>
    
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <label> <%= f.label :title  %></label>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control", placeholder: "Title"  %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <label><%= f.label :description  %></label>
      </div>
      <div class="col-sm-10">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description"  %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2 control-label"></div>
      <div class="col-sm-10">
        <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cancel and Return to List", articles_path, class: "btn btn-danger" %>
      </div>
    </div>

    <% end %>
    
 

  </div>
</div>