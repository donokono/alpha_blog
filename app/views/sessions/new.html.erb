    <div class="row">
  <div class="col-xs-12">
    <h1>Login</h1>
    </div>
    </div>


    <div class="row">
  <div class="col-xs-12">

 
    
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <label> <%= f.label :email  %></label>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :email, class: "form-control", placeholder: "Enter Email"  %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <label><%= f.label :password  %></label>
      </div>
      <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control", autocomplete: "off"  %>
      </div>
    </div>
    

    
    <div class="form-group">
      <div class="col-sm-2 control-label"></div>
      <div class="col-sm-10">
        <%= f.submit "Login", class: "btn btn-primary" %>
      <%= link_to "Cancel and Return to List", articles_path, class: "btn btn-danger" %>
      </div>
    </div>

    <% end %>
    
 

  </div>
</div>