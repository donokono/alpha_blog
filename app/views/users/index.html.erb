<div class="row">
  <div class="col-md-12">
    
    <h1>All Alpha Bloggers</h1>
        </div>
    </div>

 <p>
 <%= will_paginate %>
 </p>

<div class="row">
  <div class="col-md-12">
    
    <% @users.each do |user| %>
    
    <div class="well">
      <div class="row">
        <div class="col-md-2 center">
          <%= link_to gravatar_for(user), user_path(user) %>
        </div>
        <div class="col-md-8">
          <h3><%= link_to user.username, user_path(user) %></h3>
          <% if logged_in? and current_user.admin? %>
          <p>
            <%= link_to "Delete User", user_path(user), 
                method: :delete, 
                data: { confirm: "This will delete the user and all of the articles they created. Are you sure?"},
                class: "btn btn-xs btn-danger" %> 
          </p>
          <% end %>
          
        </div>
        <div class="col-md-2">
          <%= pluralize(user.articles.count, "article") if user.articles %>
        </div>
      </div>
    </div>
    <% end %>
    </div>
 </div>
     <p>
 <%= will_paginate %>
 </p>