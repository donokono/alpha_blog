<div class="row">
  <div class="col-md-12">
    
    <h1>All Alpha Bloggers</h1>
        </div>
    </div>



<div class="row">
  <div class="col-md-12">
    
    <% @users.each do |user| %>
    
    <div class="well">
      <div class="row">
        <div class="col-md-2 center">
          <%= link_to gravatar_for(user), user_path(user) %>
        </div>
        <div class="col-md-8">
          <h3><%= link_to user.username, user_path(user) %></h3>
        </div>
        <div class="col-md-2">
          <%= pluralize(user.articles.count, "article") if user.articles %>
        </div>
      </div>
    </div>
    <% end %>
    </div>
 </div>
    